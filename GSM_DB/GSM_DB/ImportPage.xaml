<Page x:Class="GSM_DB.ImportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GSM_DB"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="300"
      Title="ImportPage">

    <Grid>
        <TextBox x:Name="filePathTextBox" 
                 Height="30" Width="200" 
                 Margin="10,40,90,130"
                 FontSize="14"
                 IsReadOnly="True"/>
        <Button x:Name="explorerButton" 
                Height="30" Width="60" 
                Content="浏览..." Style="{StaticResource functionButton}"
                Margin="220,40,20,130" 
                Click="explorerButton_Click"/>
        <Button x:Name="okButton"
                Height="30" Width="60" 
                Content="确定" Style="{StaticResource functionButton}" 
                Margin="120,100,120,70"
                Click="okButton_Click"/>
        <TextBlock x:Name="textBlockProgress" 
                   HorizontalAlignment="Center" 
                   Margin="0,150,0,0" 
                   TextWrapping="Wrap" 
                   Text="准备导入" 
                   VerticalAlignment="Top"/>
    </Grid>
</Page>
